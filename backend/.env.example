# Smirkle Backend Environment Variables
# Copy this file to .env and modify as needed

# Application Settings
APP_NAME="Smirkle Emotion Recognition API"
APP_VERSION="1.0.0"
DEBUG=false
HOST="0.0.0.0"
PORT=8000

# DeepFace Configuration
# Model options: VGG-Face, Facenet, Facenet512, OpenFace, DeepFace, DeepID, ArcFace, Dlib
DEEPFACE_MODEL="VGG-Face"
# Detector options: opencv, ssd, dlib, mtcnn, retinaface, mediapipe, yolov8
DEEPFACE_DETECTOR="opencv"
ENFORCE_DETECTION=true

# Smirk Detection Settings
# Happiness score threshold for smirk detection (0.0 - 1.0)
SMIRK_THRESHOLD=0.3
# Consecutive frames required before triggering game over
CONSECUTIVE_FRAMES_REQUIRED=3

# Image Processing
IMAGE_QUALITY=70
MAX_IMAGE_SIZE=1024

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# Model Paths
MODELS_DIR="./models"
